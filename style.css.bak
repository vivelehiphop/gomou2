body {
  font-family: Arial, sans-serif;
}

header {
  background-color: #8B0000; /* Fond rouge bordeaux */
  padding: 20px;
  text-align: center;
  color: #FFF; /* Texte blanc */
}

#ville-depart {
  color: blue;
}

#ville-arrivee {
  color: red;
}

#resultats {
  margin-top: 20px;
}

.resultat:nth-child(even) {
  background-color: #F7F7F7; /* Fond gris */
}

.resultat:nth-child(odd) {
  background-color: #FFF; /* Fond blanc */
}
